
		<div class="container-fluid">
			<div class="row-fluid">
				<div class="span5 offset1">
					<div id="map"></div>
				</div>

				<div class="span5 info" style="text-align:left;">
					<p id="notice"><%= notice %></p>
					<h1>
					  <%= @subject.name %><br>
					  Vacant & Abandoned Properties
					</h1>

					<div class="infoHeader">
						<h2>
							Opinions 
						</h2>
						<em style="color:;">of 10 neighbors</em>
					</div>
					<% @questions.each do |my_question| %>
						<div class="question">
							<div class="row-fluid">
								<div class="span11">
									<div class="text">
										<%= my_question.question_text %>
									</div>
									<div class="progress progress-info">
                    <div class="bar" style="width: <%= my_question.average_priority/5*100 rescue nil %>%"><span style="color:black"><%= number_with_precision(my_question.average_priority, :precision => 2) %></span></div>
									</div>
									<div class="progressAnnotate">
										<span class="alignleft">
											less 
										</span>
										<span class="alignright">
											more 
										</span>
										<div style="clear: both;"></div>
									</div>
								</div>
							</div>
						</div>
					<% end %>
					<div class="infoHeader">
						<h2>
							Messages
						</h2>
					</div>
					<% @user_voice_messages.each do |message| %>
						<div class="vmessage">
							<div class="row-fluid">
								<div class="span12" >
									<!-- will style avatar later
									<div class="avatar">
									</div> -->
									<div>
										<audio src="<%= message.voice_file_url %>" preload="auto" />			
									</div>
									<div class="voiceAnnotate">
										date: <strong><%= message.created_at.to_date %></strong> &nbsp; from: <strong><%= "XXX-XXX-" + message.phone_number.to_s[-4..-1] %></strong>
									</div>
								</div>
							</div>
						</div>
					<% end %>
					
					<% if @subject.type == "Property" %>
					  <p>
					    <strong>Neighborhood:</strong>
					    <%= @subject.neighborhood.name %>
					  </p>
					<% end %>
					
					<!-- not needed at the moment
					<p>
					  <strong>Type:</strong>
					  <%= @subject.type %>
					</p>
					-->
				</div>
			</div>
		</div>
