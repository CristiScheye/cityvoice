<script>window.map = L.mapbox.map('map','codeforamerica.map-stwhr1eg');</script>

		<div class="container-fluid">
			<div class="row-fluid">
				<div class="span5 offset1">
					<div id="map"></div>
				</div>
				<div class="span5 info" style="text-align:left;">
					<p id="notice"><%= notice %></p>
					<div class="infoBox">
						<div class="upper">
							<h1>
							  <%= @subject.name %><br>
							  Vacant & Abandoned Properties
							</h1>
							<em>
								<% if @subject.type == "Property" %>
								    <%= @subject.neighborhood.name %>
								<% end %>
							</em>
						</div>
						<div class="lower">
							<div>Condition Code:</div>
							<div>Repair Cost (est.):</div>
							<div>Recommendation:</div>
						</div>
					</div>
					<div class="infoBox">
						<div class="upper">
							<h1>
								Opinions 
							</h1>
							<em style="color:;">of 10 neighbors</em>
						</div>
						<div class="lower">
							<% if @subject.type == "Neighborhood" %>
								<%= render "neighborhood_issues" %>
							<% elsif @subject.type == "Property" %>
								<%= render "property_issues" %>
							<% end %>
						</div>
					</div>
					<div class="infoBox">
						<div class="upper">
							<h1>
								Messages
							</h1>
						</div>
						<div class="lower">
							<div class="vmessage">
									<div class="row-fluid">
										<div class="span12" >
											<div class="tags">
												<span class="label label-warning">Poll A</span>
												<span class="label label-success">Poll B</span>
												<span class="label label-info">Poll C</span>
											</div>
											<div>
												<audio src="#" preload="auto"/>
											</div>
											<div class="voiceAnnotate">
												date: <strong>1/12/13</strong> &nbsp; from: <strong>XXX-XXX-1234</strong>
											</div>
										</div>
									</div>
								</div>
							<% @user_voice_messages.each do |message| %>
								<div class="vmessage">
									<div class="row-fluid">
										<div class="span12" >
											<!-- will style avatar later
											<div class="avatar">
											</div> -->
											<div>
												<audio src="<%= message.voice_file_url %>" preload="auto" />			
											</div>
											<div class="voiceAnnotate">
												date: <strong><%= message.created_at.to_date %></strong> &nbsp; from: <strong><%= "XXX-XXX-" + message.phone_number.to_s[-4..-1] %></strong>
											</div>
										</div>
									</div>
								</div>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
		<footer class="footer">
		  <small>
		    A project by
		    <a href="http://codeforamerica.org/">Code for America</a>
		    Team South Bend
		  </small>
		  <nav>
		    <ul>
		      <li><%= link_to "Contact", '#' %></li>
		    </ul>
		  </nav>
		</footer>
